<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/group"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:text="kcal" />

    <TextView
        android:id="@+id/labelPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelFat"
        android:layout_alignBottom="@+id/labelFat"
        android:layout_toRightOf="@+id/labelKcal"
        android:layout_marginLeft="25dp"
        android:text="Pro" />

    <TextView
        android:id="@+id/labelCarb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/protein"
        android:layout_toRightOf="@+id/protein"
        android:layout_marginLeft="25dp"
        android:text="Carb" />

    <TextView
        android:id="@+id/labelFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelKcal"
        android:layout_alignBottom="@+id/labelKcal"
        android:layout_toRightOf="@+id/carb"
        android:layout_marginLeft="25dp"
        android:text="Fat" />
    
    <TextView
        android:id="@+id/labelFibre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fibre"
        android:layout_toRightOf="@+id/labelFat"
    	android:layout_marginLeft="25dp"
        android:text="Fibre" />
    
    <TextView
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelKcal"
        android:layout_below="@+id/labelKcal"
        android:text="00.00" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelPro"
        android:layout_below="@+id/labelPro"
        android:text="00.00" />

    <TextView
        android:id="@+id/carb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/protein"
        android:layout_alignBottom="@+id/protein"
        android:layout_alignLeft="@+id/labelCarb"
        android:text="00.00" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/carb"
        android:layout_alignBottom="@+id/carb"
        android:layout_alignLeft="@+id/labelFat"
        android:text="00.00" />

    <TextView
        android:id="@+id/fibre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fat"
        android:layout_alignBottom="@+id/fat"
        android:layout_alignLeft="@+id/labelFibre"
        android:text="00.00" />

</RelativeLayout>